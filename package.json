{
  "name": "simple-nodejs-project",
  "version": "1.0.0",
  "description": "Simple Node.js project with CircleCI testing",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "build": "echo 'No build needed for Node.js app'"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js", "**/*.spec.js"]
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml"
  }
}
